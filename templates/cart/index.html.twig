{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="card.css" />
{% endblock %}
{% block body %}
    <div class="contrainer">
        
        <div class="table-container">
            {% if items | length %}
            <h1>Your Cart</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Quantit√©</th>
                        <th>Prix</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>---</td>
                            <td>{{ item.quantity }}</td>
                            <td>---</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right">Total:</td>
                        <td>---</td>
                        <td></td>
                    </tr>
                </tfoot>

            </table>
            <p class="home-link"><a href="/" >Home</a></p>
            {% else %}
            <p class="empty">Your cart is empty !</p>
            <p class="home-link"><a href="/products" >SEE OUR PRODUCT ?</a></p>
            {% endif %}
        </div>
        
    </div>
{% endblock %}
