{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Your Cart</h1>
    <hr>
    <div class="container">
    {% if items | length %}
    <table class="table">
    <thead>
    <tr>
    <th>Id</th>
    <th>Nom</th>
    <th>Quantit√©</th>
    <th>Prix</th>
    </tr>
    </thead>
    <tbody>
    {% for item in items %}
    <tr>
    <td>{{ item.id }}</td>
    <td>---</td>
    <td>{{ item.quantity }}</td>
    <td>---</td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
    <td colspan="3" class="text-right">Total:</td>
    <td>---</td>
    <td></td>
    </tr>
    </tfoot>
    </table>
    {% else %}
    <p>Panier vide !</p>
    {% endif %}
    </div>
    <hr>
    <p><a href="/" >Home</a></p>

</div>
{% endblock %}
